<%- layout("layouts/boilerplate") %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-sm mb-4">
        <img 
          src="<%= data.image.url || data.image.filename %>" 
          class="card-img-top img-fluid rounded-top show-img"
          alt="<%= data.title %>"
          style="max-height: 400px; object-fit: cover;"
        >
        <div class="card-body">
          <h1 class="card-title mb-3"><%= data.title %></h1>
          <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item">Owned By <b><%= data.owner.username %></b></li>
            <li class="list-group-item"><%= data.description %></li>
            <li class="list-group-item">â‚¹ <%= data.price ? data.price.toLocaleString("en-IN") : "N/A" %></li>
            <li class="list-group-item"><%= data.country %></li>
            <li class="list-group-item"><%= data.location %></li>
          </ul>
          <% if(currUser && currUser._id.equals(data.owner._id)){ %>
            <div class="d-flex gap-2">
              <form action="/listings/<%= data._id %>/edit" method="get" class="d-inline">
                <button class="btn btn-outline-dark">Edit</button>
              </form>
              <form action="/listings/<%= data._id %>?_method=DELETE" method="post" class="d-inline">
                <button class="btn btn-dark">Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Reviews Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h4 class="mb-3">Leave a Review</h4>
          <form action="/listings/<%= data._id %>/reviews" method="post" novalidate class="needs-validation">
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3">
              <label for="comment" class="form-label">Comments</label>
              <textarea name="review[comment]" id="comment" cols="18" rows="3" class="form-control" required></textarea>
              <div class="invalid-feedback">Please submit some feedback</div>
            </div>
            <button class="btn btn-dark">Submit</button>
          </form>
        </div>
      </div>

      <div class="mb-4">
        <h4 class="mb-3">All Reviews</h4>
        <div class="row g-3">
          <% if(data.reviews && data.reviews.length > 0) { %>
            <% for(let review of data.reviews) { %>
              <div class="col-md-6">
                <div class="card h-100">
                  <div class="card-body">
                    <p class="card-text fw-bold mb-1"><%= review.author ? review.author.username : "Anonymous" %></p>
                    <p class="card-text mb-1"><%= review.comment %></p>
                    <p class="card-text text-warning mb-2">
                      <% for(let i=0; i<review.rating; i++) { %>
                        <i class="bi bi-star-fill"></i>
                      <% } %>
                      <% for(let i=review.rating; i<5; i++) { %>
                        <i class="bi bi-star"></i>
                      <% } %>
                    </p>
                  </div>
                  <form action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="card-footer bg-transparent border-0 p-2">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                </div>
              </div>
            <% } %>
          <% } else { %>
            <div class="col-12">
              <div class="alert alert-secondary text-center">No reviews yet.</div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>